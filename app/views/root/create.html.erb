<h4 style="display:flex;justify-content:center;margin:2%">Create New Image</h4>

<%if @message!=nil%>
    <p style="color:red;display:flex;justify-content:center"><%=@message%></p>
<%end%>

<form method="POST" action="/new">
<%=token_tag%>
<div class="col-md-4" style="margin:auto">
<div class="mb-3">
  <label for="title" class="form-label">Image Title</label>
  <input type="text" class="form-control" id="title" name="title">
</div>
<div class="mb-3">
  <label for="url" class="form-label">Image URL</label>
  <input type="url" class="form-control" id="url" name="url">
</div>
<div class="mb-3">
  <label for="description" class="form-label">Image Description</label>
  <textarea class="form-control" id="description" rows="3" name="description"></textarea>
</div>
<input type="submit" class="btn btn-primary" value="Add Image">
</div>
</form>